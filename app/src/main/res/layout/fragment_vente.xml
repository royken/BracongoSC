

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.royken.bracongo.bracongosc.activity.VenteFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <android.support.v7.widget.CardView
            android:layout_width="fill_parent"
            app:cardBackgroundColor="#ffffff"
            android:layout_height="wrap_content" >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="REMISE "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/remiseLabel" />
                <com.github.pavlospt.CircleView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    app:cv_titleText="title"
                    app:cv_subtitleText="subtitle"
                    app:cv_titleSize="40dp"
                    app:cv_subtitleSize="15dp"
                    app:cv_titleColor="@color/colorPrimary"
                    app:cv_subtitleColor="#ffffff"
                    app:cv_strokeColorValue="@color/colorPrimary"
                    app:cv_backgroundColorValue="#9E9E9E"
                    app:cv_fillColor="#212121"
                    app:cv_fillRadius="0.9"
                    app:cv_strokeWidthSize="5"
                    android:id="@+id/remise"/>
                <TextView
                    android:text="Sous réserve de vérifications"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="fill_parent"
            app:cardBackgroundColor="#ffffff"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content" >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="HISTORIQUE ACHAT MOIS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/jourLabel" />

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chartJours"
                    android:layout_width="match_parent"
                    app:cardBackgroundColor="#ffffff"
                    android:layout_height="250dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="fill_parent"
            app:cardBackgroundColor="#ffffff"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content" >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="HISTORIQUE ACHAT MOIS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/venteJLabel" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="JOUR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:text="BI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:text="BG"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:text="PET"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:text="CHIFFRE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>
                <ListView
                    android:layout_width="match_parent"
                    android:nestedScrollingEnabled="true"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:id="@+id/listJ"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="fill_parent"
            app:cardBackgroundColor="#ffffff"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content" >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="HISTORIQUE ACHAT ANNEE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/moisLabel" />

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chartMois"
                    android:layout_width="match_parent"
                    app:cardBackgroundColor="#ffffff"
                    android:layout_height="250dp" />
            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="fill_parent"
            app:cardBackgroundColor="#ffffff"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content" >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="HISTORIQUE ACHAT ANNEE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/venteMLabel" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="MOIS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:text="BI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:text="BG"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:text="PET"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:text="CHIFFRE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>
                <ListView
                    android:layout_width="match_parent"
                    android:nestedScrollingEnabled="true"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:id="@+id/list"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>
